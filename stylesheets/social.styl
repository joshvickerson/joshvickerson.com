@import "vars.styl"
.social-container
  height 100%
  width 100%
  margin auto

  img
    display block
    width 200px
    border-radius 200px
    margin auto

.social-list
  padding 0
  margin 0
  height 100%
  li
    list-style-type none
    width 48px
    height 48px
    margin 15px auto
    border-radius 32px
    background-size 75%
    background-repeat no-repeat
    background-position center
    &.facebook
      background-image url('/img/facebook-128.png')
      background-color #3b5998
    &.twitter
      background-image url('/img/twitter-128.png')
      background-color #55acee
    &.linkedin
      background-image url('/img/linkedin-128.png')
      background-color #0976b4
    &.google
      background-image url('/img/google-128.png')
      background-color #dd4b39
    &.github
      background-image url('/img/github-128.png')
    	background-color #333
    &.instagram
      background-image url('/img/instagram-128.png')
      background-color #3f729b
      background-size 50%
    &::after
      content: " ";
      position: relative;
      top: 48px;
      margin-left: calc(50% - 2px);
      border-left: 3px solid default-gray;
      z-index -1
    &:last-child::after
      border none
