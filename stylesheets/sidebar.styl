@import "vars.styl"
.sidebar-container
  height 100%
  width 100%
  margin auto
  nav
    margin auto
    margin-bottom 10px
    text-align center
    width 90%
    a
      display block
      padding 5px 0px
      font-size 1.1rem;
      color dark-gray
      text-decoration none
      width 100%
      border-left thin solid default-gray
      border-right thin solid default-gray
  img
    display block
    width 120px
    border-radius 120px
    margin auto

.social-list
  overflow hidden
  padding 0
  margin 0 auto
  width 312px
  li
    float left
    list-style-type none
    width 48px
    height 48px
    margin 15px 2px
    border-radius 32px
    background-size 75%
    background-repeat no-repeat
    background-position center
    a
      display block
      width 100%
      height 100%
    &.facebook
      background-image url('/img/facebook-128.png')
      background-color #3b5998
    &.twitter
      background-image url('/img/twitter-128.png')
      background-color #55acee
    &.linkedin
      background-image url('/img/linkedin-128.png')
      background-color #0976b4
    &.google
      background-image url('/img/google-128.png')
      background-color #dd4b39
    &.github
      background-image url('/img/github-128.png')
    	background-color #333
    &.instagram
      background-image url('/img/instagram-128.png')
      background-color #3f729b
      background-size 50%

@media screen and (min-width: 31.25em)
  .sidebar-container
    nav
      width 75%
    .social-list
      width 100%
      height 100%
      li
        float none
        margin 15px auto

@media screen and (min-width: 50em)
  .sidebar-container
    height 100%
    width 100%
    margin auto
    nav
      width 50%
    img
      width 200px
      border-radius 200px
