@import "vars.styl"
html, body
  width 100%
  height 100%
  margin 0 auto
  font-family font
  font-size 100%
  color default-gray
  background-color #f5f2e9

h1, h2
  color dark-blue
  text-shadow 1px 1px 1px #ccc

h3
  color accent-red
  text-shadow 1px 1px 1px #bababa
  font-weight 500
p
  margin 0
.content-wrapper
  width 100%
  max-width 1000px
  margin auto
  margin-top 30px;

.sidebar
  width 30%
  height 100%
  float left

.main
  width 70%
  height 100%
  float left
